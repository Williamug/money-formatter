{
  "name": "williamug/money-formatter",
  "description": "Comprehensive Laravel formatter package for money, percentages, file sizes, phone numbers, credit cards, durations, and more with Blade directives and helper functions",
  "keywords": [
    "laravel",
    "formatter",
    "money-formatter",
    "percentage",
    "file-size",
    "phone-formatter",
    "credit-card",
    "duration",
    "blade-directives",
    "number-abbreviation",
    "ordinal-numbers"
  ],
  "homepage": "https://github.com/williamug/money-formatter",
  "license": "MIT",
  "authors": [
    {
      "name": "William Asaba",
      "email": "asabawilliamdk@yahoo.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.1|^8.2|^8.3",
    "spatie/laravel-package-tools": "^1.14.0",
    "illuminate/contracts": "^10.0|^11.0"
  },
  "require-dev": {
    "nunomaduro/collision": "^7.0|^8.0",
    "orchestra/testbench": "^8.0|^9.0",
    "pestphp/pest": "^2.0|^3.0",
    "pestphp/pest-plugin-laravel": "^2.0|^3.0",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^10.0|^11.0"
  },
  "autoload": {
    "psr-4": {
      "Williamug\\MoneyFormatter\\": "src"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Williamug\\MoneyFormatter\\Tests\\": "tests"
    }
  },
  "scripts": {
    "post-autoload-dump": "@composer run prepare",
    "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
    "prepare": "@php vendor/bin/testbench package:discover --ansi",
    "build": [
      "@composer run prepare",
      "@php vendor/bin/testbench workbench:build --ansi"
    ],
    "analyse": "vendor/bin/phpstan analyse",
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Williamug\\MoneyFormatter\\BladeServiceProvider"
      ],
      "aliases": {
        "Money": "Williamug\\MoneyFormatter\\Facades\\Money"
      }
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
